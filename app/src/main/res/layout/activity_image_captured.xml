<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#CF7AC7"
    android:layout_height="match_parent"
    tools:context=".ImageCaptured">






        <Button
            android:id="@+id/Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/forest_green"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:text="Confirm"
            android:textSize="20sp"
            android:paddingVertical="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/Retake"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="30dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
        android:layout_marginEnd="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:ems="8"
            android:onClick="confirm">
        </Button>

        <Button
            android:id="@+id/Retake"
            android:background="@drawable/custom_button"
            app:layout_constraintStart_toEndOf="@id/Confirm"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:textSize="20sp"
        android:textStyle="bold"
            android:ems="8"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="@color/reject_red"
            android:textColor="@color/white"
            android:text="Retake"
            android:paddingVertical="20dp"
        android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:onClick="retake">
        </Button>


    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@android:drawable/divider_horizontal_dim_dark" />


</androidx.constraintlayout.widget.ConstraintLayout>